{
   "name": "@almiris/pushdep",
   "version": "1.3.2",
   "description": "A concurrent executor for hierarchical tasks (tasks that *depend* on other tasks). It can also be used as a message queue, a workflow engine or a process manager.",
   "main": "index.js",
   "types": "index.d.ts",
   "scripts": {
      "start": "ts-node src/index.ts",
      "typeorm": "typeorm-ts-node-commonjs",
      "build": "tsc",
      "format": "",
      "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
      "test": "jest --runInBand",
      "test:watch": "jest --watch --runInBand",
      "test:cov": "jest --runInBand --coverage",
      "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
      "package" : "rm -rf package && tsc && cp -R dist package && cp package.json package && cp README.md package && cd package && npm pack"
   },
   "publishConfig": {
      "access": "public"
   },
   "keywords": [
      "executor",
      "concurrent executor",
      "task executor",
      "task",
      "job",
      "message queue",
      "queue",
      "workflow",
      "process",
      "process manager",
      "nodejs",
      "node",
      "typescript",
      "dependency"
   ],
   "homepage": "https://github.com/almiris/pushdep",
   "author": "Almiris",
   "license": "ISC",
   "repository": {
      "type": "git",
      "url": "https://github.com/almiris/pushdep"
   },
   "devDependencies": {
      "@types/jest": "^27.4.1",
      "@types/node": "^16.11.10",
      "@types/validator": "^13.7.2",
      "@typescript-eslint/eslint-plugin": "^5.20.0",
      "@typescript-eslint/parser": "^5.20.0",
      "dotenv": "^16.0.0",
      "eslint": "^8.13.0",
      "jest": "^27.5.1",
      "pg": "^8.7.3",
      "reflect-metadata": "^0.1.13",
      "sequelize": "^6.20.1",
      "sequelize-typescript": "^2.1.3",
      "ts-jest": "^27.1.4",
      "ts-node": "10.7.0",
      "tsconfig-paths": "^3.14.1",
      "typeorm": "^0.3.6",
      "typescript": "4.5.2",
      "uuid": "^8.3.2"
   },
   "jest": {
      "moduleFileExtensions": [
         "js",
         "json",
         "ts"
      ],
      "rootDir": "src",
      "testRegex": ".*\\.spec\\.ts$",
      "transform": {
         "^.+\\.(t|j)s$": "ts-jest"
      },
      "collectCoverageFrom": [
         "**/*.(t|j)s"
      ],
      "coverageDirectory": "../coverage",
      "testEnvironment": "node",
      "moduleNameMapper": {
         "^src/(.*)$": "<rootDir>/$1"
      }
   }
}
